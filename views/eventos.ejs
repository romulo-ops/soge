<div class="card">
  <div class="card-header">
    <h2 class="card-title">Eventos</h2>
    <div class="muted">Eventos cadastrados no sistema</div>
  </div>

  <div class="table-wrap">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Data</th>
          <th>Cliente</th>
          <th>Tipo</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% if (events.length === 0) { %>
          <tr>
            <td colspan="5" class="muted">Nenhum evento encontrado.</td>
          </tr>
        <% } %>

        <% events.forEach(e => { %>
          <tr>
            <td><%= e.id %></td>
            <td><%= e.event_date || '-' %></td>
            <td><%= e.client_name || '-' %></td>
            <td><%= e.event_type || '-' %></td>
            <td><%= e.status || '-' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

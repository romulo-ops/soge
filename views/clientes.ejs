<div class="card">
  <div class="card-header">
    <h2 class="card-title">Clientes</h2>
    <div class="muted">Mostrando os Ãºltimos <%= clients.length %> registros</div>
  </div>

  <div class="table-wrap">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>External ID</th>
          <th>Nome</th>
          <th>Telefone</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% if (clients.length === 0) { %>
          <tr><td colspan="5" class="muted">Nenhum cliente encontrado.</td></tr>
        <% } %>

        <% clients.forEach(c => { %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.external_id || '' %></td>
            <td><%= c.name || '' %></td>
            <td><%= c.phone || '' %></td>
            <td><%= c.email || '' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
